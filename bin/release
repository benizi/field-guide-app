#!/bin/sh
curl -s -g 'https://api.honeybadger.io/v1/deploys' \
  -d 'deploy[environment]=production' \
  -d 'deploy[local_username]=Benjamin R. Haskell' \
  -d @"$1/deploy.param" \
  -d 'deploy[repository]=https://github.com/benizi/field-guide-app.git' \
  -d 'api_key='$HONEYBADGER_API_KEY 1>&2

# empty YAML file
printf -- '---\n'
